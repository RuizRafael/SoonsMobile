<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Soons.Views.Scanner"
              xmlns:local="clr-namespace:Soons"
             BindingContext="{Binding Source={x:Static local:App.ServiceLocator}, Path=ViewModelScanner}"
             x:Name="ScannerView">
    <ContentPage.Content>
        <StackLayout>
            <Button Rotation="90" ImageSource="scanner.png" Command="{Binding  BindingContext.MostrarZapatilla, Source={x:Reference ScannerView}}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" WidthRequest="250" HeightRequest="250" CornerRadius="500" BackgroundColor="#ee1212"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>